<!DOCTYPE html>
<html lang="en">
<head>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.8.0/gsap.min.js"></script>
    <link rel="stylesheet" href="../../public/css/login.css">
    <link rel="stylesheet" href="../../public/css/global.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
    <div class="container">
        <div id="loginBackground">
            <div id="loginTitle"> Login </div>
            <form id="loginForm" name="login" method="POST" action=<%= url+'/login' %> >
                <div id="loginUserName">
                    <input name="username" type="text" placeholder="Username">
                </div>
                <div id="loginPassword">
                    <input name="password" type="password" placeholder="Password">
                </div>
                <div id="loginValidateButton">
                    <input class="validate" type="submit" value="Login">
                </div>

            </form>
            <div id="notRegistered">
                Don't have an account ? <button id="createUserButton" onclick="startShowCreateUser()"> Signup </button>
            </div>
            <script>
                function startShowCreateUser() {
                    TweenMax.to("#loginBackground", 0.1, {opacity:0, display:"none", marginTop: '0%'});
                    TweenMax.delayedCall(0.2, showCreateUser);
                }

                function showCreateUser() {
                    TweenMax.to("#createUserBackground", 0.1, {opacity:1, display:"flex", marginTop: '10%'});
                }

                //////
                function startShowLogin() {
                    TweenMax.to("#createUserBackground", 0.1, {opacity:0, display:"none", marginTop: '20%'});
                    TweenMax.delayedCall(0.2, showLogin);
                }

                function showLogin() {
                    TweenMax.to("#loginBackground", 0.1, {opacity:1, display:"flex", marginTop: '10%'});
                }
            </script>
        </div>
        <div id="createUserBackground">
            <div id="createUserTitle"> Create user </div>
            <form id="createUserForm" name="createUser" method="POST" action=<%= url+'/createUser' %> >
                <div id="createUserName">
                    <input name="username" type="text" placeholder="Username">
                </div>
                <div id="createPassword">
                    <input name="password" type="password" placeholder="Password">
                </div>
                <div id="createEmail">
                    <input name="email" type="email" placeholder="Email">
                </div>
                <div id="languages">
                    <label for="language">Choose your language from the list:</label>
                    <input list="languages">
                        <select id="language" name="language">
                            <option value="en">English</option>
                            <option value="fr">French</option>
                            <option value="de">German</option>
                            <option value="pt">Portuguese</option>
                            <option value="es">Spanish</option>
                        </select>
                    <input type="hidden">
                </div>
                <div id="validateCreateButton">
                    <input class="validate" type="submit" value="Create">
                </div>
            </form>
            <div id="alreadyRegistered">
                Have an account ? <button id="showLogin" onclick="startShowLogin()"> Go back </button>
            </div>
        </div>

    </div>

</body>
</html>
